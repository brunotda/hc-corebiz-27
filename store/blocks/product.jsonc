{
  "store.product": {
    "children": [
      "flex-layout.row#main",
      "__fold__",
      "flex-layout.row#recomendados"
    ]
  },
  "flex-layout.row#main": {
    "props": {
      "marginTop": 6,
      "blockClass": "containerProduto"
    },
    "children": [
      "flex-layout.col#product-left",
      "flex-layout.col#product-right"
    ]
  },
  "flex-layout.row#recomendados": {
    "children": [
      "flex-layout.col#recomendados"
    ],
    "props": {
      "marginTop": 4,
      "marginBottom": 4
    }
  },
  "flex-layout.col#recomendados": {
    "children": [
      "flex-layout.row#shelfRecomendados"
    ]
  },
  "flex-layout.row#shelfRecomendados": {
    "children": [
      "shelf.relatedProducts#viewandBought"
    ],
    "props": {
      "blockClass": "shelfOut"
    }
  },
  "shelf.relatedProducts#viewandBought": {
    "blocks": ["product-summary.shelf"],
    "props": {
      "recommendation": "buy",
      "productList": {
        "itemsPerPage": 4,
        "showTitle": true,
        "titleText": "Quem viu tamb√©m comprou!"
      }
    }
  },
  "flex-layout.col#product-left": {
    "children": [
      "product-images"
    ]
  },
  "flex-layout.col#product-right": {
    "props": {
      "preventVerticalStretch": true,
      "verticalAlign": "middle",
      "marginLeft": 5
    },
    "children": [
      "vtex.store-components:product-name",
      "product-description",
      "product-price",
      "product-quantity",
      "add-to-cart-button"
    ]
  },
  "product-description": {
    "props":{
      "showTitle": false
    }
  },
  "product-price": {
    "props": {
      "showSavings": true,
      "showListPrice": true
    }
  }
}